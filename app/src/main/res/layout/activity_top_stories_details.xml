<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".feature.topStoriesDetails.TopStoriesDetailsActivity">

    <ImageView
        android:id="@+id/imvBackCover"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@drawable/place_holder"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imvBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="6dp"
        app:srcCompat="@drawable/ic_back"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/imvBackCover"
        android:text="This is article Title"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:fontFamily="@font/avenirnext_bold"
        android:textColor="@android:color/white"/>

    <ImageView
        android:id="@+id/imvAuthor"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:srcCompat="@drawable/ic_feather"
        android:scaleType="fitXY"
        android:tint="@color/color_feather"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imvAuthor"
        android:layout_marginStart="10dp"
        android:text="Author Name"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="@id/imvAuthor"
        app:layout_constraintBottom_toBottomOf="@id/imvAuthor"
        android:fontFamily="@font/avenirnext_medium"
        android:textColor="@android:color/white"/>

    <ImageView
        android:id="@+id/imvPublish"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:srcCompat="@drawable/ic_publish"
        android:scaleType="fitXY"
        android:tint="@color/color_feather"
        app:layout_constraintTop_toBottomOf="@id/imvAuthor"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvPublish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imvPublish"
        android:layout_marginStart="10dp"
        android:text="Published on : "
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="@id/imvPublish"
        app:layout_constraintBottom_toBottomOf="@id/imvPublish"
        android:fontFamily="@font/avenirnext_medium"
        android:textColor="@android:color/white"/>

    <ImageView
        android:id="@+id/imvLink"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:srcCompat="@drawable/ic_link"
        android:scaleType="fitXY"
        android:tint="@color/color_feather"
        app:layout_constraintTop_toBottomOf="@id/imvPublish"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvLink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imvLink"
        android:layout_marginStart="10dp"
        android:text="https://nyti.ms/2PiWst8"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="@id/imvLink"
        app:layout_constraintBottom_toBottomOf="@id/imvLink"
        android:fontFamily="@font/avenirnext_medium"
        android:textColor="@android:color/white"/>



    <TextView
        android:id="@+id/tvAbstract"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="A jury convicted Mr. Weinstein of felony sex crime and rape, but acquitted him of the most serious charges against him, predatory sexual assault."
        android:textSize="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imvLink"
        android:fontFamily="@font/avenirnext_medium"
        android:textColor="@android:color/white"/>







</androidx.constraintlayout.widget.ConstraintLayout>